@{
    ViewBag.Title = "AdminIndex";
}
@section Angular {
    @Scripts.Render("~/bundles/admin")
}

<h2>Admin's Page</h2>
<div ng-app="adminApp" ng-controller="adminController">
    <div class="table-users">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="user in users">
                    <td>{{user.name}}</td>
                    <td>{{user.role}}</td>
                    <td ng-click=showEditPlace(user) class="edit-btn">|EDIT|</td>
                </tr>
                <tr><td><button ng-click="newRole=true">NewRole</button></td></tr>
            </tbody>
        </table>
    </div>
    <div class="newRole-place" ng-show="newRole">
        <form name="selectForm">
            <input type="text" placeholder="new role" ng-model="role" />
            <button ng-click=createRole(role)>Create</button>
        </form>
    </div>
    <div class="edit-place" ng-show=editPlace>
        <h1>user: {{editUser.name}}</h1>
        <form name="selectForm">
            <select name="repeatSelect" id="repeatSelect" ng-model="role">
                <option ng-repeat="role in roles track by $index" value="{{role}}">{{role}}</option>
            </select>
            <button ng-click="editRole(role)">Edit</button>
        </form>
    </div>

</div>
